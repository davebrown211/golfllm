[Unit]
Description=Golf Directory Next.js App
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/golfllm/frontend/golf-directory
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=80

[Install]
WantedBy=multi-user.target